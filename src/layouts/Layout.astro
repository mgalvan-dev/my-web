---
import "@fontsource/geist-sans";
import Analytics from "@vercel/analytics/astro";

interface Props {
    lang: string;
    title?: string;
    description?: string;
    ogImage?: string;
}

const {
    lang,
    title = "Marco Galván - Full Stack Developer",
    description = lang === "en"
        ? "Full stack developer. Marco Galván's website with projects, contact and more."
        : "Desarrollador full stack. Web de Marco Galván con proyectos, contacto y más.",
    ogImage = "https://mgalvan.dev/og-image.png",
}: Props = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://mgalvan.dev").href;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="author" content="Marco Galván" />
        <meta name="robots" content="index, follow" />

        <!-- Canonical URL -->
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <meta name="twitter:site" content="@MarcoGal4" />
        <meta name="twitter:creator" content="@MarcoGal4" />

        <!-- Favicons -->
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="96x96"
            href="/favicon-96x96.png"
        />

        <!-- Alternate languages -->
        <link rel="alternate" href="https://mgalvan.dev/" hreflang="es" />
        <link rel="alternate" href="https://mgalvan.dev/en" hreflang="en" />
        <link
            rel="alternate"
            href="https://mgalvan.dev/"
            hreflang="x-default"
        />

        <Analytics />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body><script
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Person",
            name: "Marco Galván",
            url: "https://mgalvan.dev/",
            jobTitle:
                lang === "en"
                    ? "Web and Mobile Developer"
                    : "Desarrollador Web y Móvil",
            worksFor: {
                "@type": "Organization",
                name: "Freelance",
            },
            sameAs: [
                "https://www.linkedin.com/in/marcoagalvan/",
                "https://github.com/mgalvan-dev",
                "https://x.com/MarcoGal4",
            ],
        })}
    />
</html>

<style is:global>
    :root {
        background-color: Canvas;
        color: CanvasText;
        color-scheme: dark;
        font-family: "Geist Sans", sans-serif;
    }

    *,
    *::after,
    *::before {
        min-width: 0;
        box-sizing: border-box;
        padding: 0;
        margin: 0;
    }

    img,
    video,
    svg {
        display: block;
        height: auto;
        max-width: 100%;
    }

    html,
    body {
        min-height: 100dvh;
        scroll-behavior: smooth;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        text-wrap: balance;
    }

    p {
        text-wrap: pretty;
    }
</style>
